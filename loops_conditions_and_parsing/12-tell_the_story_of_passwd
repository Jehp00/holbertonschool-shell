#!/usr/bin/env bash
#displays the content of the file /etc/passwd, using the while loop + IFS.
FILENAME="/etc/passwd/"
while IFS=: read -r USERNAME GROUP_ID HOME_DIRECTORY COMMAND/SHELL USER_ID PASSWORD USER_ID_INFO
do
	echo "$USERNAME, $PASSWORD, $USER_ID, $USER_ID_INFO, $HOME_DIRECTORY, $COMMAND\/\S\H\E\L\L"
done < $FILENAME
